<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/tv_conversation_detail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:12:12"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_conversation_detail_date"
        android:textColor="#ffffff"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        />
    <TextView 
        android:id="@+id/tv_conversation_detail_recieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_receive_sms"
        android:text="就是打发打发点阿打发打发爱的发放"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="5dp"
        android:minWidth="70dp"
        android:textColor="#ffffff"/>
    <TextView 
        android:id="@+id/tv_conversation_detail_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_send_sms"
        android:text="就是打发打发点阿打发打发爱的发放"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="25dp"
        android:minWidth="70dp"
        android:layout_gravity="right"/>

</LinearLayout>
